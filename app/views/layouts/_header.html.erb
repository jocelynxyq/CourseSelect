<nav class="navbar navbar-blue navbar-fixed-top ">
  <div class="container">

    <div class="navbar-header">
      <%= image_tag "edu_cloud.png", class:'brand' %>
      <%= link_to "选课系统", root_path, class: 'navbar-brand navbar-name' %>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">

        <li class=<%= "active" if params[:controller]=="homes" %>> <%= link_to "主页", root_path,class:'navbar-white' %></li>

        <% if student_logged_in? %>
            <li class=<%= "active" if params[:controller]=="courses" %>> <%= link_to "我的课程", courses_path,class:'navbar-white' %></li>
        <% elsif teacher_logged_in? %>
            <li class=<%= "active" if params[:controller]=="courses" %>> <%= link_to "课程管理", courses_path,class:'navbar-white' %></li>
        <% elsif admin_logged_in? %>
            <li> <%= link_to "后台管理", rails_admin_path,class:'navbar-white' %></li>
        <% end %>

      </ul>

      <ul class="nav navbar-nav navbar-right  navbar-white">

        <% if current_user %>
            <li>
              <%= link_to edit_user_path(current_user),class:'navbar-white' do %>
                  <%= current_user.name %><span class="glyphicon glyphicon-user"></span>
              <% end %>
            </li>

            <li>
              <p class="navbar-text"><%= current_user.department %></p>
            </li>

            <li>
              <%= link_to sessions_logout_path, method: :delete,class:'navbar-white' do %>
                  退出 <span class="	glyphicon glyphicon-off"></span>
              <% end %>
            </li>

        <% else %>

            <li><%= link_to sessions_login_path,class:'navbar-white' do %>
                  登陆 <span class="	glyphicon glyphicon-user"></span>
              <% end %>
            </li>

            <li><%= link_to new_user_path,class:'navbar-white' do %>
                  注册 <span class="	glyphicon glyphicon-log-in"></span>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>




